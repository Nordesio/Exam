<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/carIdInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Car ID" />

    <EditText
        android:id="@+id/carStatusInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Car Status" />

    <EditText
        android:id="@+id/clientNameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Client Name" />

    <Button
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Car" />

    <Button
        android:id="@+id/rentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rent Car" />

    <Button
        android:id="@+id/scrapButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scrap Car" />

    <Button
        android:id="@+id/reportButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Report" />

    <Button
        android:id="@+id/exportButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Export to JSON" />

    <Button
        android:id="@+id/importButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Import from JSON" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>
